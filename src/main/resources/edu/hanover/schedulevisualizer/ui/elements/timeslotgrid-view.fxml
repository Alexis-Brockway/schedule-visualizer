<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<fx:root type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="edu.hanover.schedulevisualizer.ui.HelloController"
         style="-fx-border-color: black; -fx-border-width: 1;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" id="welcomeLabel"/>
    <Button id="helloButton" text="Hello!" onAction="#onHelloButtonClick"/>
</fx:root>
